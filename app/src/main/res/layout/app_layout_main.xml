<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <include layout="@layout/layout_action_toolbar_no_back" />

    <app.lbs.com.lbsapp.widget.MyViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/tab_layout"
        android:layout_weight="1"
        android:background="@color/white" />

    <View style="@style/line" />

    <RadioGroup
        android:id="@+id/rg_contain"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_one_selecter"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:text="首页"
            android:textColor="@color/selector_tab_text" />

        <RadioButton
            android:id="@+id/rb_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_two_selecter"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:text="鹰眼"
            android:textColor="@color/selector_tab_text" />

        <RadioButton
            android:id="@+id/rb_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_three_selecter"
            android:gravity="center"
            android:text="汽车"
            android:textColor="@color/selector_tab_text" />

        <RadioButton
            android:id="@+id/rb_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_four_selecter"
            android:gravity="center"
            android:paddingTop="@dimen/dp_5"
            android:text="工具箱"
            android:textColor="@color/selector_tab_text" />

        <RadioButton
            android:id="@+id/rb_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_five_selecter"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/selector_tab_text" />
    </RadioGroup>


</LinearLayout>