<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ExamActivity">

    <ImageView
        android:id="@+id/exam_img"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/exam_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="考题" />

    <RadioGroup
        android:id="@+id/exam_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    </RadioGroup>

    <TextView
        android:id="@+id/exam_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/exam_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定" />

    <Button
        android:id="@+id/exam_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一题" />

    <TextView
        android:id="@+id/exam_explains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>