<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/item_insurer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="保险公司"
            android:textColor="#000000"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/item_policy_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:text="保单号" />

        <TextView
            android:id="@+id/item_insurance_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_policy_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="-62dp"
            android:text="保险电话"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_policy_id"
            android:layout_alignEnd="@+id/item_insurance_phone"
            android:layout_alignRight="@+id/item_insurance_phone"
            android:text="时间" />
    </RelativeLayout>
</RelativeLayout>
